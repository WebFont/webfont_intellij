<idea-plugin version="2">
  <id>com.fontstorage.ideaplugin</id>
  <name>FontStorage plugin</name>
  <version>1.1</version>
  <vendor email="pull@webfont.ru" url="https://fontstorage.com">FontStorage</vendor>

  <description><![CDATA[
      Use custom free fonts in your projects.
      ]]></description>

  <change-notes><![CDATA[
      1.1 - Version for FontStorage
      1.0 - First version
      ]]>
  </change-notes>

  <!-- please see http://confluence.jetbrains.net/display/IDEADEV/Build+Number+Ranges for description -->
  <idea-version since-build="107.105"/>

  <!-- please see http://confluence.jetbrains.net/display/IDEADEV/Plugin+Compatibility+with+IntelliJ+Platform+Products
       on how to target different products -->

  <depends>com.intellij.modules.lang</depends>

  <application-components>
    <!-- Add your application components here -->
  </application-components>

  <project-components>
    <!-- Add your project components here -->
  </project-components>

  <actions>
    <!-- Add your actions here -->
      <group id="FontStorage.Main" description="FontStorage" text="FontStorage">
          <add-to-group group-id="MainMenu" anchor="last"  />

          <action id="FontStorage.ImportFont" class="com.fontstorage.ideaplugin.ImportFont"
                  text="_Import Font" description="Insert font import from FontStorage site"  >
              <keyboard-shortcut first-keystroke="control alt F" keymap="$default" />
          </action>

          <action id="FontStorage.ViewFont" class="com.fontstorage.ideaplugin.ViewFont"
                  text="_View Font" description="View font on FontStorage site"  >
              <keyboard-shortcut first-keystroke="control alt W" keymap="$default" />
          </action>

      </group>
  </actions>

  <extensions defaultExtensionNs="com.intellij">
    <!-- Add your extensions here -->
  </extensions>
</idea-plugin>